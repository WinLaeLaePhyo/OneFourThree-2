<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/w3.css" rel="stylesheet" />
    <style>
        header {
            font-style: italic;
            text-align: center;
            color: white;
            max-height: 40px;
        }

        footer {
            font-style: italic;
            text-align: center;
            color: white;
            height: 40px;
        }

        a:hover {
            text-decoration: none;
        }

        #DivLayout {
            padding-bottom: 15px;
            padding-top: 5px;
            padding-left: 10px;
            padding-right: 10px;
            width: 20%;
            float: left;
        }

            #DivLayout #img1 {
                bottom: 1px;
                position: fixed;
                left: 43%;
                right: 43%;
            }

        p {
            font-size: 80%;
            color: white;
        }
    </style>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body id="body">
    <header class="w3-top w3-red w3-xlarge" style="z-index: 1">
        <button class="w3-button w3-red w3-left w3-xlarge" onclick="goBack()"><i class="fa fa-arrow-left"></i></button>
        <button class="w3-button w3-red w3-centered w3-medium">Notification</button>
    </header>
    @RenderBody()

    <script>
        function goBack() {
            window.history.back();
        }
        function w3_open() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById('sidebar').style.opacity = "100%";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("mySidebar").style.animate = "right";
            document.getElementById('body').style.opacity = "100%";
        }
    </script>
</body>
</html>